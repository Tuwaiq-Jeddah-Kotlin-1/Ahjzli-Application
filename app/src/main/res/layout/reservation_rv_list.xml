<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/conRestaurantCard"
    android:background="@drawable/rv_card"
    android:padding="16dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/txtTime_reserve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/time"
        android:textColor="@color/main_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawablePadding="2dp"
        app:drawableStartCompat="@drawable/ic_time"
        app:drawableTint="@color/main_color" />

    <TextView
        android:id="@+id/txtStoreName_reserve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:hint="@string/store_name"
        android:textColor="@color/main_color"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTime_reserve" />

    <TextView
        android:id="@+id/txtStoreBranch_reserve"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:hint="@string/branch_name"
        android:textColor="@color/second_color"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtStoreName_reserve" />

    <ImageView
        android:id="@+id/IVLocation_reserve"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="10dp"
        android:src="@drawable/ic_location"
        app:layout_constraintBottom_toBottomOf="@+id/txtStoreBranch_reserve"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtStoreBranch_reserve" />

</androidx.constraintlayout.widget.ConstraintLayout>